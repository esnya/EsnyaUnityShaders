				#endif
				float2 uv_MainTex = i.ase_texcoord1.xy * _MainTex_ST.xy + _MainTex_ST.zw;
				
				
				finalColor = ( tex2D( _MainTex, uv_MainTex ) * _OutlineColor );
				return finalColor;
			}
			ENDCG
		}
